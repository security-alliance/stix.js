{
    "compilerOptions": {
        "target": "es2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
